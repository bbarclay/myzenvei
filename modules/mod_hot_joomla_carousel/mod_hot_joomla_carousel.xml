<description>MODULE_DESC</description>
<files>
	<filename module="mod_hot_joomla_carousel">mod_hot_joomla_carousel.php</filename>
	<filename>index.html</filename>
	<filename>images/circleleft32.png</filename>
	<filename>images/circleright32.png</filename>
	<filename>images/hotjoomlatemplates_logo_150px.jpg</filename>
	<filename>images/index.html</filename>
	<filename>js/index.html</filename>
